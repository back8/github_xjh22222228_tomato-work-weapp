.info {
  position: relative;
  display: flex;
  flex-direction: column;
}

.info .poster {
  width: 100%;
  height: 5500px !important;
}

.info .wrapper {
  position: absolute;
  top: 80px;
  left: 30px;
}

.info .nick-name {
  margin: 10px 0;
  font-size: 22px;
  color: #000;
}

.logout-button {
  position: fixed;
  bottom: 100px;
  left: 20px;
  right: 20px;
}

.footer {
  position: fixed;
  bottom: 25px;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 12px;
  color: #c1c1c1;
}

.circle-decoration {
  z-index: -1;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 200px;
  height: 200px;
  background-color: rgb(238, 241, 255);
  border-radius: 50%;
  transform: translate(-50%, 50%);
}
